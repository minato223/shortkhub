<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Shortkhub
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('assets/logo.png') }}">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="relative">
			<div class="fixed w-screen h-[4rem] top-0 left-0 bg-white border-b border-gray-200 flex items-center px-4 z-50">
				<div class="flex gap-2 items-end">
					<img src="{{ asset('assets/logo.png') }}" alt="logo" class="w-10 h-10 rounded-sm"/>
					<h3 class="text-2xl font-medium">Shortkhub</h3>
				</div>
			</div>
			<div class="w-[300px] p-4 text-center flex flex-col items-start justify-center gap-2 fixed top-[4rem] bg-slate-50 h-[calc(100vh-4rem)] border-e border-gray-200">
				{% include "partials/navbar.html.twig" %}
			</div>
			<div class="content pl-[320px] min-h-screen pt-[5rem] pr-4 bg-slate-50">
				<div class="bg-white p-4 rounded shadow min-h-[calc(100vh-6rem)]">
					{% block content %}{% endblock %}
				</div>
			</div>
		</div>
		<toaster-widget></toaster-widget>
	</body>
</html>
